<p id="notice"><%= notice %></p>
<h2><%= @team.number %> - <%= @team.name %></h2>
</p>

<% @competitions.each do |competition| %>
  <h3>Competition: <%= competition.name %> (<%= competition.tba_code %>)</h3>
  <p/><br>

  <h3>Team Data</h3>
  <table class="table table-striped table-bordered table-sm">
    <thead>
    <tr>
      <td><b>Id</b></td>
      <td><b>Kind</b></td>
      <td><b>Data</b></td>
    </tr>
    </thead>
    <tbody>

    <% @team_datum.each do |team_data| %>
      <% next unless team_data.competition == competition %>
      <tr>
        <td><%= team_data.id %></td>
        <td><%= team_data.kind %></td>
        <td><%= team_data.data %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>

  <h3>Matches</h3>
  <table class="table table-striped table-bordered table-sm">
    <thead>
    <tr>
      <td><b>Number</b></td>
      <td><b>Time Defending (s)</b></td>
      <td><b>Time Dead (s)</b></td>
      <td><b>Start</b></td>
      <td><b>Human Player Notes</b></td>
      <td><b>General Notes</b></td>
      <td><b>Scout</b></td>
      <td><b>Device Id</b></td>
    </tr>
    </thead>
    <tbody>
    <% @matches.each do |match| %>
      <% next unless match.competition == competition %>
      <tr>
        <td><%= match.number %></td>
        <td><%= match.time_defending %></td>
        <td><%= match.time_dead %></td>
        <td><%= match.start %></td>
        <td><%= match.human_player_notes %></td>
        <td><%= match.general_notes %></td>
        <td><%= match.scout %></td>
        <td><%= match.device_id %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <hr>
<% end %>

<%= link_to 'Back', teams_path %>
