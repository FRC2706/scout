<p id="notice"><%= notice %></p>

<h1>Competitions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <tr>
      <td><b>Id</b></td>
      <td><b>Name</b></td>
      <td><b>Start</b></td>
      <td><b>End</b></td>
      <td><b>City</b></td>
      <td><b>Prov</b></td>
      <td><b>Country</b></td>
      <td><b>TBA Code</b></td>
    </tr>
    <% @competitions.each do |competition| %>
      <tr>
        <td><%= link_to competition.id, competition %></td>
        <td><%= competition.name %></td>
        <td><%= competition.start_date.strftime("%b-%d-%Y") %></td>
        <td><%= competition.end_date.strftime("%b-%d-%Y") %></td>
        <td><%= competition.city %></td>
        <td><%= competition.province %></td>
        <td><%= competition.country %></td>
        <td><%= competition.tba_code %></td>
      </tr>
    <% end %>
  </tbody>
</table>
